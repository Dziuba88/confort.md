        .catalog__list__footer: .pagination
          ul
            li: a(href="").btn.dark__outline.disabled
              +icon('#prev', 'icon first')
              span.text precedent
            li.counter
              span.current 3
              span.sep /
              span.total 126
            li: a(href="").btn.dark__outline
              span.text următoarea
              +icon('#next')
