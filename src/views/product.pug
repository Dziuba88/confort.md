              .col.xs-6: .params
                .params__label colors
                .params__list.lg
                  .params__item
                    input#color_1(type="radio", name="color", data-slide="0" checked)
                    label(for="color_1"): img(src="tmp/color_1.jpg", alt="")
                  .params__item
                    input#color_2(type="radio", name="color", data-slide="1")
                    label(for="color_2"): img(src="tmp/color_2.jpg", alt="")
                .params__list.sm: .carousel__sm.owl-carousel
              .col.xs-6: .params
                .params__label sidewalls
                .params__list.lg: .carousel__lg.owl-carousel
                  .params__item
                    input#sidewall_1(type="radio", name="sidewall", checked)
                    label(for="sidewall_1"): img(src="tmp/sidewall_1.jpg", alt="")
                  .params__item
                    input#sidewall_2(type="radio", name="sidewall")
                    label(for="sidewall_2"): img(src="tmp/sidewall_2.jpg", alt="")
                  .params__item
                    input#sidewall_3(type="radio", name="sidewall")
                    label(for="sidewall_3"): img(src="tmp/sidewall_3.jpg", alt="")
                  .params__item
                    input#sidewall_4(type="radio", name="sidewall")
                    label(for="sidewall_4"): img(src="tmp/sidewall_1.jpg", alt="")
                .params__list.sm: .carousel__sm.owl-carousel
        .col.xl-7.md-6.mobile__first
          .product__main__gallery
            .product__mobile__header: h1 Colțar Irina
            .ebaboba
              a.btn.primary.ebaboba__link(href="tmp/product_1.jpg" title="Colțar Irina")
