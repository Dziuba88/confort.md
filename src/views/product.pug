extends layouts/layout
block VARS
  - var title = "Canapele"
block PAGE
  .page__intro.product
    .ctn
      .breadcrumbs: ul
        li: a(href="") Principala
        li: a(href="") Catalog
        li: a(href="") Canapele
        li: span Colțar Irina
      .row
        .col.xl-5.md-6.mobile__last: .product__main
          .product__main__header
            h1 Colțar Irina
            p Sunt posibile diferite variante de tapițerie! Prețul variază în funcție de materialele folosite. La comandă prețurile diferă față de prețurile afișate pe site!
          .product__main__price
            .row
              .col.sm-6
                .product__price
                  small price
                  span.current 19,450 MDL
                  span.old 27,800 MDL
              .col.sm-6
                button.btn.white__outline
                  +icon("#cart", "icon first")
                  span.text adaugă în coș
                .info
                  +icon("#info")
                  span.text The price varies depending on the materials used and dimensions.
          .product__main__dimensions
            .dimention__label dimensions
            .dimention
              input#dimention_1(type="radio", name="dimention" checked)
              label(for="dimention_1")
                span.input
                span.width
                  small width
                  span 3225 mm
                span.height
                  small height
                  span 2565 mm
                span.depth
                  small depth
                  span 830 mm
                span.sep
                span.space
                  small Sleeping space
                  span 1400 mm x 2615 mm
            .dimention
              input#dimention_2(type="radio", name="dimention")
              label(for="dimention_2")
                span.input
                span.width
                  small width
                  span 2565 mm
                span.height
                  small height
                  span 3225 mm
                span.depth
                  small depth
                  span 830 mm
                span.sep
